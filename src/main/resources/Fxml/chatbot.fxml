<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" styleClass="chat-container" stylesheets="@../Styles/chatbot.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.travelwise.controllers.ChatbotController">
    <HBox styleClass="header">
        <Label styleClass="header-title" text="ChatBot" />
        <Label styleClass="header-date" text="Today" />
    </HBox>

    <ListView fx:id="chatListView" styleClass="chat-list-view" />

    <HBox spacing="10" styleClass="input-container">
        <TextField fx:id="messageInput" promptText="Ask Me" styleClass="input-field" />
        <Button onAction="#handleSendMessage" styleClass="send-button" text="Send" />
    </HBox>
</VBox>
